#!/bin/bash

source /home/worker/.bash_profile

PORT=5554
echo "Starting emulator[$PORT]..."
pwd=`PWD`
cd /home/worker/data/android
emulator -avd avd1 -no-skin -no-audio -no-window -port $PORT &
/home/worker/bin/wait-for-emulator
adb uninstall us.pinguo.facedetect
adb install -r /home/worker/data/android/facedetect.apk
sleep 10
adb shell am start -n us.pinguo.facedetect/us.pinguo.facedetect.MainActivity
cd $pwd
